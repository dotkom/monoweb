// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  username   String
  created_at DateTime     @default(now())
  first_name String
  last_name  String
  email      String       @unique
  password   String
  punishment Punishment[]
}

model Company {
  id          String  @id @default(uuid())
  name        String
  description String?
  phone       String?
  email       String? @unique
  website     String?
  location    String?
}

model PunishmentRuleSet {
  id          String       @id @default(uuid())
  title       String
  duration    Int
  description String
  punishments Punishment[]
}

model Punishment {
  id         String            @id @default(uuid())
  type       PunishmentType
  rule_set   PunishmentRuleSet @relation(fields: [ruleset_id], references: [id])
  ruleset_id String
  given_date DateTime          @default(now())
  start_date DateTime
  end_date   DateTime
  user       User              @relation(fields: [user_id], references: [id])
  user_id    String
}

enum PunishmentType {
  SUSPENSION
  MARK
}
