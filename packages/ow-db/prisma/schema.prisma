// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String
  created_at DateTime @default(now())
  first_name String
  last_name  String
  email      String   @unique
  password   String
}

model Company {
  id          String  @id @default(uuid())
  name        String
  description String
  phone       String?
  email       String @unique
  website     String
  location    String?
  type        String?
}
