{
  "name": "@dotkomonline/db",
  "packageManager": "yarn@3.2.0",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --target es2020 --dts --clean --sourcemap",
    "migrate3": "tsx ./src/run_migrations.ts",
    "migrate2": "prisma migrate dev",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "migrate": "tsx ../../node_modules/.bin/node-pg-migrate -j ts -m ./src/migrations --tsconfig ./tsconfig.json"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "kysely": "^0.22.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@dotkomonline/logger": "workspace:*",
    "@types/chance": "^1.1.3",
    "@types/eslint": "^8",
    "@types/pg": "^8",
    "chance": "^1.1.8",
    "eslint": "^8.26.0",
    "kysely-codegen": "^0.8.0",
    "node-pg-migrate": "^6.2.2",
    "prisma": "^4.1.1",
    "tsup": "^6.2.1",
    "tsx": "^3.9.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "ts-node ./src/seed/index.ts"
  }
}
