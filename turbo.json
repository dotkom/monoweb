{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "build:prod": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "build:storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static"]
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "storybook": {
      "outputs": [],
      "cache": false
    }
  },
  "globalDependencies": [
    "$NODE_ENV",
    "$API_PORT",
    "$DASHBOARD_PORT",
    "$NEXTAUTH_CLIENT_ID",
    "$NEXTAUTH_URL",
    "$HYDRA_ADMIN_URL",
    "$NEXT_PUBLIC_DEBUG"
  ]
}
