{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "build:prod": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "build:storybook": {
      "dependsOn": ["^build"],
      "outputs": ["./apps/storybook/storybook-static/**"]
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["migrate"],
      "cache": false
    },
    "migrate": {
      "env": ["$DB_HOST", "$DB_PORT", "$DB_USER", "$DB_PASSWORD", "$DB_NAME"],
      "cache": false
    },
    "storybook": {
      "outputs": [],
      "cache": false
    }
  },
  "globalDependencies": [
    "$NODE_ENV",
    "$API_PORT",
    "$DASHBOARD_PORT",
    "$NEXTAUTH_CLIENT_ID",
    "$NEXTAUTH_URL",
    "$HYDRA_ADMIN_URL",
    "$NEXT_PUBLIC_DEBUG",
    "$DB_HOST",
    "$DB_PORT",
    "$DB_USER",
    "$DB_PASSWORD",
    "$DB_NAME"
  ]
}
