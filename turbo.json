{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "S3_BUCKET_MONOWEB",
    "NODE_ENV",
    "OAUTH_CLIENT_ID",
    "OAUTH_CLIENT_SECRET",
    "OAUTH_ISSUER",
    "AUTH_SECRET",
    "AUTH_TRUST_HOST",
    "AUTH_URL",
    "DATABASE_URL",
    "STRIPE_SECRET_KEY",
    "AWS_REGION",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_ACCESS_KEY_ID",
    "EMAIL_TOKEN",
    "EMAIL_ENDPOINT",
    "RPC_ALLOWED_ORIGINS",
    "RPC_HOST"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/dist"]
    },
    "type-check": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint", "type-check"],
      "outputs": []
    },
    "test:it": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint-check": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "migrate:dev": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "dependsOn": []
    },
    "migrate:dev-with-fixtures": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "dependsOn": []
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": ["**/tsconfig.json"]
}
