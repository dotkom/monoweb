{
  "name": "@dotkomonline/rpc",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "dotenv -o -- tsx watch --import ./runtime.mjs src/bin/server.ts",
    "dev:bun": "bun --watch --env-file .env src/bin/server.ts",
    "shell": "dotenv -o -- tsx --import ./runtime.mjs src/bin/repl.ts",
    "docker:build": "docker build -t rpc:latest -f Dockerfile --progress plain ../..",
    "lint": "biome check . --write",
    "lint-check": "biome check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:it": "vitest run -c ./vitest-integration.config.ts",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "receive-stripe-webhooks": "stripe listen --forward-to localhost:4444/webhook/stripe",
    "give-me-staff": "dotenv -o -- tsx src/scripts/give-me-staff.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/client-scheduler": "^3.844.0",
    "@aws-sdk/client-sqs": "^3.844.0",
    "@aws-sdk/client-sts": "^3.821.0",
    "@aws-sdk/s3-presigned-post": "^3.821.0",
    "@date-fns/tz": "^1.2.0",
    "@dotkomonline/db": "workspace:*",
    "@dotkomonline/environment": "workspace:*",
    "@dotkomonline/logger": "workspace:*",
    "@dotkomonline/oauth2": "workspace:*",
    "@dotkomonline/utils": "workspace:*",
    "@fastify/cors": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.203.0",
    "@opentelemetry/api-metrics": "^1.0.0",
    "@opentelemetry/exporter-logs-otlp-proto": "^0.203.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/instrumentation": "^0.203.0",
    "@opentelemetry/instrumentation-winston": "^0.48.0",
    "@opentelemetry/resource-detector-aws": "^2.3.0",
    "@opentelemetry/resource-detector-container": "^0.7.3",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-logs": "^0.203.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@prisma/client": "^6.8.2",
    "@sentry/node": "^9.24.0",
    "@trpc/server": "11.0.0-rc.828",
    "auth0": "^4.23.1",
    "commander": "^14.0.0",
    "date-fns": "^4.1.0",
    "fastify": "^5.3.3",
    "fastify-raw-body": "^5.0.0",
    "import-in-the-middle": "^1.14.2",
    "lru-cache": "^11.1.0",
    "marked": "^16.1.1",
    "require-in-the-middle": "^7.5.2",
    "stripe": "^18.4.0",
    "superjson": "^2.0.0",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.25.47"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@dotkomonline/config": "workspace:*",
    "@dotkomonline/types": "workspace:*",
    "@faker-js/faker": "9.9.0",
    "@testcontainers/postgresql": "10.28.0",
    "@types/node": "22.17.1",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/ui": "3.1.4",
    "dotenv-cli": "8.0.0",
    "tslib": "2.8.1",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.1.4",
    "vitest-mock-extended": "3.1.0"
  }
}
