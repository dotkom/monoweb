{
  "extends": "../../packages/config/tsconfig.json",
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  }
}
