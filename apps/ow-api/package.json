{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "exports": "./dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development tsx watch ./src/index.ts",
    "watch": "tsc-watch --project tsconfig.json --onSuccess \"yarn dev\"",
    "seed": "node --loader ts-node/esm --experimental-specifier-resolution=node src/database/seed.ts",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "build:prod": "tsup src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@dotkomonline/db": "workspace:^",
    "@dotkomonline/logger": "workspace:^",
    "@ory/client": "^0.2.0-alpha.60",
    "@trpc/server": "^10.0.0-rc.0",
    "@types/aws-lambda": "^8.10.101",
    "bcrypt": "^5.1.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@dotkomonline/config": "*",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8",
    "@types/express": "^4.17.14",
    "@types/uuid": "^8.3.4",
    "@vitest/ui": "^0.23.4",
    "eslint": "^8.26.0",
    "express": "^4.18.1",
    "tsup": "^6.4.0",
    "tsx": "^3.11.0",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.23.4"
  }
}
