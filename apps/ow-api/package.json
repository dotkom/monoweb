{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "exports": "./dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development run -T nodemon --watch './src/**.{ts}' --watch './config/**.{ts,json}' --exec 'node --loader ts-node/esm --experimental-specifier-resolution=node src/index.ts'",
    "watch": "tsc-watch --project tsconfig.json --onSuccess \"yarn dev\"",
    "seed": "node --loader ts-node/esm --experimental-specifier-resolution=node src/database/seed.ts",
    "lint": "run -T eslint --max-warnings 0 .",
    "lint:fix": "run -T eslint --fix .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@dotkomonline/db": "workspace:^",
    "@dotkomonline/logger": "workspace:^",
    "@trpc/server": "^10.0.0-alpha.48",
    "@types/aws-lambda": "^8.10.101",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "uuid": "^8.3.2",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@dotkomonline/eslint-config-ow": "workspace:*",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/uuid": "^8.3.4",
    "@vitest/ui": "^0.23.4",
    "express": "^4.18.1",
    "vitest": "^0.23.4"
  }
}
