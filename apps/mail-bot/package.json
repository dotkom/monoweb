  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@dotkomonline/tsconfig": "workspace:*",
    "@types/aws-lambda": "^8.10.129",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.16.10",
