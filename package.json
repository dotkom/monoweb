{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "A monorepo for Node apps",
  "author": "kharann",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=@dotkomonline/*",
    "build:api": "turbo run build --filter=ow-api",
    "build:web": "turbo run build:prod --filter=web",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "dev": "dotenv -e .env -- turbo run dev",
    "migrate": "dotenv -e .env -- turbo run migrate",
    "migrate-dev": "dotenv -e .env.local -- turbo run migrate -- latest --with-seed",
    "storybook": "turbo run storybook --filter=storybook",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=16.13",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.34.0",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsup": "^6.6.3",
    "turbo": "^1.8.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "volta": {
    "node": "18.13.0"
  }
}
