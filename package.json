{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "A monorepo for Node apps",
  "author": "kharann",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=ow-api",
    "build:web": "turbo run build:prod --filter=web",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "storybook": "turbo run storybook --filter=docs"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=16.14",
    "yarn": ">=3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.47",
    "eslint": "^8.21.0",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.7",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^3.14.1",
    "tsup": "^6.2.1",
    "turbo": "^1.3.4",
    "typescript": "^4.7.4"
  }
}
